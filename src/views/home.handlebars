<div>
  <h1 class="product">Bienvenido a la vinoteca de Alexander</h1>
  <h2 class="lista-producto">lista de productos</h2>
  <ul class="listado">
    {{#each products}}
      <li>
        <a href="/products/{{this.id}}">{{this.titulo}}</a>
        -
        {{this.precio}}
        -
        {{this.descripcion}}
        -
        {{this.categoria}}
        <button onclick="agregarAlCarrito('{{this.id}}')">Agregar al carrito</button>
      </li>
    {{/each}}
  </ul>
  <div class="paginacion">
    {{#if hasPreviousPage}}
      <a href="/products?page={{currentPage - 1}}">Anterior</a>
    {{/if}}
    {{#if hasNextPage}}
      <a href="/products?page={{nextPage}}">Siguiente</a> <!-- Cambiado aquÃ­ -->
    {{/if}}
  </div>
</div>