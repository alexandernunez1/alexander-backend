<div style="max-width: 600px; margin: auto; padding: 20px; background-color: #fff; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
  <h2 style="text-align: center; margin-bottom: 20px; color: #7A288A;">Dejanos tu comentario sobre nuestras experiencias</h2>

  <div style="background-color: #fff; border-radius: 10px; padding: 20px; border: 1px solid #7A288A;">
    <form id="postForm">
      <textarea
        id="text"
        name="text"
        style="width: 100%; padding: 10px; border: 1px solid #7A288A; border-radius: 5px; margin-bottom: 10px; resize: vertical;"
        rows="3"
        placeholder="Escribe algo..."
        required
      ></textarea>
      <button type="submit" style="background-color: #7A288A; color: #fff; border: none; padding: 10px 20px; border-radius: 5px; width: 100%;">ðŸš€ Publicar</button>
    </form>
  </div>

  <div style="text-align: center; margin-top: 20px;">
    <a href="/" style="background-color: #fff; color: #7A288A; border: 1px solid #7A288A; padding: 10px 20px; border-radius: 5px; width: 100%; text-decoration: none;">â¬… Volver</a>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
  const { io } = require("socket.io-client");
  const socket = io();
  const postForm = document.getElementById("postForm");
  postForm.addEventListener("submit", async (event) => {
    event.preventDefault();
    try {
      const userId = localStorage.getItem("userId");
      if (!userId) {
        alert("No tenes una sesion activa, porfavor registrese!");
        window.location.href = "/registro";
        return;
      }
      const text = document.getElementById("text").value;
      const response = await fetch("/api/post", {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify({ userId, text })
      });
      const { payload } = await response.json();
      socket.emit("new post", payload);
      alert("Post creado correctamente!");
      // Redirigir a la pÃ¡gina de inicio despuÃ©s de crear el post
      window.location.href = "/";
    } catch (error) {
      console.error(error);
      alert("Error al crear el post!");
    }
  });
</script>